---
interface Props {
  id: string;
  label: string;
  placeholder: string;
  type: string;
}

const { id, label, placeholder, type } = Astro.props;
---

<label for={id} class="block mb-2 text-lg font-medium text-gray-900 ">{label}</label>
<input type='text' id={id} class="p-2.5 rounded-lg border-2 border-black mb-8" placeholder={placeholder} maxlength="100"/>